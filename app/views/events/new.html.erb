<h2>Create a new event:</h2>

<%= form_for(@event) do |f| %>
  <%= f.label 'Event name:' %>
  <%= f.text_field :name %>
  <%= f.label 'Game type:' %>
  <%= f.collection_select(:game_type_id, GameType.all, :id, :name) %>
  <%= f.label 'Location:' %>
  <%= f.collection_select(:location_id, Location.all, :id, :name) %>
  <%= f.label 'Date:' %>
  <input name="event[date]" class="datepicker">
  <%= f.label 'Time:' %>
  <input name="event[time]" class="timepicker">
  <%= f.label 'Minimum number of participants:' %>
  <%= f.text_field :minimum_number %>
  <%= f.submit 'Enter' %>
<% end %>

<script type="text/javascript">
  $('.datepicker').pickadate();
  $('.timepicker').pickatime();
</script>
